node {
    def app

    stage('Clone repository') {
        /* Cloning the Repository to our Workspace */

        checkout scm
    }

    stage('Test APP') {
        sh "ls"
        sh "npm install"
    }

    stage('Build image') {
        /* This builds the actual image */

        app = docker.build("denice/nmpcd_dev")
    }

    stage('deploy') {
        sh "docker kill nmpcd_dev"
        sh "docker rm nmpcd_dev"
        sh "docker run -d --name nmpcd_dev  -p 3030:3030 denice/nmpcd_dev"
    }
}