node {
    def app

    stage('Clone repository') {
        /* Cloning the Repository to our Workspace */

        checkout scm
    }

    stage('Test APP') {
        sh "ls"
        sh "npm install"
    }

    stage('Build image') {
        /* This builds the actual image */

        app = docker.build("denice/nmpcd_dev")
    }

    stage('deploy') {
        try {
            sh "docker kill nmpcd_dev"
        } catch (err) {
            echo "nmpcd_dev not running."
        }
        try {
            sh "docker rm nmpcd_dev"
        } catch (err) {
            echo "no nmpcd_dev."
        }
        sh "docker run  -e NODE_ENV=dev -d --name nmpcd_dev  -p 3030:3030 denice/nmpcd_dev"
    }
}